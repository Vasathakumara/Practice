pipeline {
    agent any

    stages{
                              stage('first stage'){
                                        steps{
                                             echo 'helo word'
                                              }         

                            
                                                 }               
                             stage('Second stage'){
                                   steps{
                                        echo 'Good Morning'
                                        }

                                               }


                             stage('Third stage'){
                                   steps{
                                        echo 'Good evening'
                                        }

                                                  }
  
                             stage('Mail will generate'){
                                   steps{
                                        mail bcc: '', body: '', cc: '', from: '', replyTo: '', subject: 'Build success', to: 'vasanthahr.kit99@gmail.com'
                                        }

                                                  }
 
        }   


        }   
